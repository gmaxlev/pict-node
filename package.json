{
  "name": "pict-node",
  "version": "0.0.1",
  "description": "",
  "main": "./lib/index.js",
  "module": "./lib/index.esm.js",
  "types": "./lib/index.d.ts",
  "author": "Maksym Levytskyi https://github.com/gmaxlev",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "npm run pict && npm run prettier && npm run lint && jest . --silent",
    "test:watch": "npm run pict && jest . --watch",
    "dev": "npm run pict && cross-env NODE_ENV=development nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts",
    "build:dts": "tsc --declaration --emitDeclarationOnly -p . --outDir dts",
    "build": "npm run pict && rm -rf lib && rm -rf dts && npm run build:dts && rollup -c rollup.config.cjs --bundleConfigAsCjs && rm -rf dts",
    "lint": "eslint .",
    "prettier": "prettier --check .",
    "prepare": "husky install",
    "postinstall": "npm run pict",
    "pict": "node ./scripts/pict-install.js"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix 'src/**'",
      "prettier --write .",
      "npm run test"
    ],
    "*.{md}": [
      "prettier --write ."
    ]
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "memfs": "^3.4.13",
    "nodemon": "^2.0.20",
    "prettier": "2.8.4",
    "rollup": "^3.18.0",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "execa": "^7.1.1",
    "temp": "^0.9.4",
    "tmp": "^0.2.1",
    "type-fest": "^3.6.1"
  }
}
